{
	"compilerOptions": {
		"target": "es2022",
		"module": "node16",
		"moduleResolution": "node16",
		"moduleDetection": "force",
		"outDir": "dist",
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"jsx": "react",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ES2020"
		],
		"allowSyntheticDefaultImports": true,
		"noEmitOnError": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"strictNullChecks": true
	},
	"include": [
		"src"
	]
}
